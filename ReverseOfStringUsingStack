class Stack:
    def __init__(self):
        self.items = []

    def push(self, item):
        self.items.append(item)

    def pop(self):
        if len(self.items) > 0:
            return self.items.pop()
        return None

    def is_empty(self):
        return len(self.items) == 0

stack = Stack()

while True:
    text = input("\nEnter a word to reverse (or 'quit' to exit): ")
    
    if text == 'quit':
        break

    for char in text:
        stack.push(char)

    reversed_text = ""
    while not stack.is_empty():
        reversed_text += stack.pop()

    print("Reversed word:", reversed_text)